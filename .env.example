# ==========================================
# DJANGO CORE SETTINGS
# ==========================================

# Secret key for Django (generate a new one for production)
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DEBUG=True

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL database settings
DB_NAME=klyra_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ==========================================
# ALLOWED HOSTS
# ==========================================

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email backend configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Gmail credentials (use App Password for Gmail)
# To generate an App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your-email@example.com

# Email timeout and SSL settings
EMAIL_TIMEOUT=30
EMAIL_SSL_CERTFILE=None
EMAIL_SSL_KEYFILE=None

# ==========================================
# COMPANY INFORMATION
# ==========================================

COMPANY_NAME=Klyra
COMPANY_TIMEZONE=America/Guayaquil

# ==========================================
# SITE CONFIGURATION
# ==========================================

# Backend URL
SITE_URL=http://localhost:8000

# Frontend URL (for Next.js/React)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==========================================
# FACTURACIÓN ELECTRÓNICA (ECUADOR - SRI)
# ==========================================

# Ambiente: 1 = Pruebas, 2 = Producción
FACTURA_AMBIENTE=1

# Certificado de firma electrónica (.p12)
FACTURA_P12_PASSWORD=your-certificate-password
FACTURA_P12_PATH=media/certificados/your-certificate.p12

# ==========================================
# IMPUESTOS
# ==========================================

# Tarifa de IVA (%) - Ecuador 2025
TARIFA_IVA=15